{
    "name": "terminal42/contao-mailusername",
    "type": "contao-bundle",
    "description": "E-mail as username for Contao Open Source CMS",
    "keywords": ["contao", "email", "username"],
    "license": "MIT",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "https://www.terminal42.ch"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/terminal42"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/terminal42"
        }
    ],
    "support": {
        "issues": "https://github.com/terminal42/contao-mailusername/issues",
        "source": "https://github.com/terminal42/contao-mailusername",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.9 || ^5.0",
        "doctrine/dbal": "^2.11 || ^3.0",
        "symfony/config": "^4.4 || ^5.0 || ^6.0 || ^7.0",
        "symfony/dependency-injection": "^4.4 || ^5.0 || ^6.0 || ^7.0",
        "symfony/http-kernel": "^4.4 || ^5.0 || ^6.0 || ^7.0",
        "symfony/translation-contracts": "^1 || ^2 || ^3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "terminal42/contao-build-tools": "dev-main"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\MailusernameBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\MailusernameBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "php-http/discovery": false,
            "terminal42/contao-build-tools": true
        }
    }
}
